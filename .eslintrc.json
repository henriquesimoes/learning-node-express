{
    "env": {
        "mocha": true
    },
    "extends": [
        "eslint:recommended", 
        "google", 
        "standard",
        "plugin:node/recommended",
        "plugin:import/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "node",
        "promise",
        "import",
        "mocha"
    ],
    "rules": {
        "semi":["error", "always"],
        "node/no-unpublished-require": 0
    }
}