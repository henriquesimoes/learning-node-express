extends ../layout.pug

block content
    form(method="post", action="edit")
        input(name="id", value= staff.id, required, hidden)
        .form-group: label Nome:
            input.form-control(name="name", value= staff.name, required)
        .form-group: label Salary:
            input.form-control(name="salary", value= staff.salary, required)
        .form-group: label Phone:
            input.form-control(name="phone", value= staff.phone, required)
        .form-group: label Email:
            input.form-control(name="email", value= staff.email, required)
        button.btn.btn-primary(type="submit") Edit
    p: a(href="http://localhost:8080/staff") Voltar