{
    "extends": [
        "eslint:recommended", 
        "google", 
        "standard",
        "plugin:node/recommended",
        "plugin:import/recommended",
        "plugin:promise/recommended",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "node",
        "promise",
        "import",
        "jest"
    ],
    "rules": {
        "semi":["error", "always"],
        "linebreak-style": ["error", "windows"],
        "node/no-unpublished-require": 0
    }
}